      <span class="product__inventory-text">Sundsvall ({{ sundsvall_num }})</span>
    </p>
  {%- endif -%}

  {%- if vittsjo_num != 0 -%}
    <p class="product__inventory product__inventory--in-stock font-body-bolder">
      <span class="product__inventory-icon"></span>
      <span class="product__inventory-text">Vittsjö ({{ vittsjo_num }})</span>
    </p>
  {%- endif -%}
  <div class="product__block--divider-stock">
    <div class="product__divider no-empty"></div>
  </div>
  
  {%- if inventory_quantity == 0 -%}
    {%- liquid
      assign stock_control_json = current_variant.metafields.custom.stock_control
      assign has_order_location = false
      
      if stock_control_json != blank
        assign stock_control_str = stock_control_json | append: ''
        if stock_control_str contains 'vittsjo":"order'
          assign has_order_location = true
        endif
        if stock_control_str contains 'ronas":"order'
          assign has_order_location = true
        endif
        if stock_control_str contains 'stockholm":"order'
          assign has_order_location = true
        endif
        if stock_control_str contains 'goteborg":"order'
          assign has_order_location = true
        endif
        if stock_control_str contains 'sundsvall":"order'
          assign has_order_location = true
        endif
        if stock_control_str contains 'lund":"order'
          assign has_order_location = true
        endif
      endif
    -%}
    <!-- Debug: stock_control_json = {{ stock_control_json }} -->
    <!-- Debug: has_order_location = {{ has_order_location }} -->
    
    {%- if has_order_location -%}
      <p class="product__inventory product__inventory--in-stock font-body-bolder">
        <span class="product__inventory-icon"></span>
        <span class="product__inventory-text">Beställningsvara</span>
      </p>
    {%- else -%}
      <p class="product__inventory product__inventory--out-of-stock font-body-bolder">
        <span class="product__inventory-icon"></span>
        <span class="product__inventory-text">Slut i lager</span>
      </p>
    {%- endif -%}
  {%- else -%}
    <p class="product__inventory product__inventory--{{ inventory_status }} font-body-bolder">
      <span class="product__inventory-icon"></span>
      <span class="product__inventory-text">Totalt ({{ inventory_quantity }})</span>
    </p>
  {%- endif -%}
</div>
