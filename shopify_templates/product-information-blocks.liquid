{%- liquid
  assign goteborg_num = current_variant.metafields.custom.stock_goteborg | default: 0 | plus: 0
  assign lund_num = current_variant.metafields.custom.stock_lund | default: 0 | plus: 0
  assign ronas_num = current_variant.metafields.custom.stock_ronas | default: 0 | plus: 0
  assign stockholm_num = current_variant.metafields.custom.stock_stockholm | default: 0 | plus: 0
  assign sundsvall_num = current_variant.metafields.custom.stock_sundsvall | default: 0 | plus: 0
  assign vittsjo_num = current_variant.metafields.custom.stock_vittsjo | default: 0 | plus: 0
  
  assign inventory_quantity = goteborg_num | plus: lund_num | plus: ronas_num | plus: stockholm_num | plus: sundsvall_num | plus: vittsjo_num

  if inventory_quantity > 0
    if inventory_quantity <= 0
      assign inventory_status = 'low-stock'
    else
      assign inventory_status = 'in-stock'
    endif
  else
    if product.selected_or_first_available_variant.inventory_policy == 'continue'
      assign inventory_status = 'in-stock'
    else
      assign inventory_status = 'out-of-stock'
    endif
  endif
-%}
