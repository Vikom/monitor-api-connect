    <p class="product__inventory product__inventory--in-stock font-body-bolder">
      <span class="product__inventory-icon"></span>
      <span class="product__inventory-text">Göteborg ({{ goteborg_num }})</span>
    </p>
  {%- endif -%}

  {%- if lund_num != 0 -%}
    <p class="product__inventory product__inventory--in-stock font-body-bolder">
      <span class="product__inventory-icon"></span>
      <span class="product__inventory-text">Lund ({{ lund_num }})</span>
    </p>
