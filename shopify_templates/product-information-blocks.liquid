  <script>
  (function() {
    const sectionId = '{{ section.id }}';
    const specsData = JSON.parse(document.getElementById(`variant-specs-data-${sectionId}`).textContent || '{}');
    
    function updateSpecifications(variantId) {
      const specs = specsData[variantId];
      const tbody = document.getElementById(`variant-specs-${sectionId}`);
      const emptyState = document.getElementById(`specs-empty-${sectionId}`);
      
      if (!specs || !tbody) return;
      
      const specTypes = ['sku', 'volume', 'length', 'width', 'depth'];
      let hasVisibleSpecs = false;
      
      specTypes.forEach(specType => {
        const row = tbody.querySelector(`[data-spec="${specType}"]`);
        const valueCell = row?.querySelector(`[data-value="${specType}"]`);
        
        if (row && valueCell) {
          const value = specs[specType];
          
          if (value && value.trim() !== '' && value !== '0' && value !== '0.00') {
            // Update the value
            const unit = getUnit(specType);
            const hasUnit = value.includes(unit) || 
                            (unit === 'L' && (value.includes('l') || value.includes('m³'))) ||
                            (unit === 'mm' && (value.includes('cm') || value.includes('m')));
            
            valueCell.textContent = hasUnit ? value : `${value} ${unit}`;
            row.style.display = '';
            hasVisibleSpecs = true;
          } else {
            row.style.display = 'none';
          }
        }
      });
      
      // Show/hide empty state
      if (emptyState) {
        emptyState.style.display = hasVisibleSpecs ? 'none' : '';
      }
      
      // Show/hide table
      tbody.parentElement.style.display = hasVisibleSpecs ? '' : 'none';
    }
    
    function getUnit(specType) {
      const units = { volume: 'L', length: 'mm', width: 'mm', depth: 'mm' };
      return units[specType] || '';
    }
    
    // Listen for variant changes
    document.addEventListener('change', function(event) {
      if (event.target.name === 'id' || event.target.matches('[data-variant-id]')) {
        const variantId = event.target.value || event.target.dataset.variantId;
        if (variantId) {
          updateSpecifications(variantId);
        }
      }
    });
    
    // Listen for custom variant change events
    document.addEventListener('variant:change', function(event) {
      if (event.detail && event.detail.variant) {
        updateSpecifications(event.detail.variant.id);
      }
    });
    
    // Initialize with current variant
    const currentVariantInput = document.querySelector('input[name="id"]:checked, select[name="id"]');
    if (currentVariantInput) {
      updateSpecifications(currentVariantInput.value);
    }
  })();
  </script>
